<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RadYanViewer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RadYanViewer.Views.SearchView">
    <Design.DataContext>
        <vm:SearchViewViewModel />
    </Design.DataContext>
    <StackPanel>
        <Grid RowDefinitions="*,*" ColumnDefinitions="*,Auto,Auto,Auto" >
            <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding SearchString}" MinWidth="500" />
            <Button Grid.Row="0" Grid.Column="1" Margin="5,0" Name="SearchButton" Command="{Binding SearchButton_Clicked}">开始搜索</Button>
            <Button Grid.Row="0" Grid.Column="2" Name="ResetButton" Command="{Binding ResetButton_Clicked}">重置结果</Button>
            <CheckBox Grid.Row="0" Grid.Column="3" IsChecked="{Binding IsNotFullData}" Margin="5,0">只获取最近一年的数据</CheckBox>
            <DataGrid Grid.Row="1" Grid.Column="0" Items="{Binding SearchResults}" Height="400" Margin="0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="姓名" Binding="{Binding Name}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </StackPanel>
</UserControl>