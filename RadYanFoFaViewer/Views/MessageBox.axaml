        Width="400" Height="200"
        MaxWidth="400" MaxHeight="200"
        x:Class="RadYanFoFaViewer.Views.MessageBox"
        CanResize="False"
        Title="MessageBox">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" RowDefinitions="150,30" ColumnDefinitions="*">
        <TextBlock Grid.Row="0" Grid.Column="0" x:Name="MessageContent" Text="" VerticalAlignment="Center"
                   Padding="5,5" />
        <Button Grid.Row="1" Grid.Column="0" Content="чбошод" Width="100" HorizontalContentAlignment="Center"
                HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_OnClick" />
    </Grid>
</Window>